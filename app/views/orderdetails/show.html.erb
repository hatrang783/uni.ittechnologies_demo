<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Orderdetail</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to orderdetails_path, class: button_class(theme: "transparent") do %>
      All Orderdetails
      <% end %>
      <%= link_to edit_orderdetail_path(@orderdetail), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Quantity:</p>
        <p><%= @orderdetail.quantity %></p>
      </li>
      <li>
        <p class="font-semibold">Rate:</p>
        <p><%= @orderdetail.rate %></p>
      </li>
      <li>
        <p class="font-semibold">Review:</p>
        <p><%= @orderdetail.review %></p>
      </li>
      <li>
        <p class="font-semibold">Reviewdate:</p>
        <p><%= @orderdetail.reviewdate %></p>
      </li>
      <li>
        <p class="font-semibold">Order:</p>
        <p><%= @orderdetail.order %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @orderdetail.product %></p>
      </li>
  </ul>
</div>
