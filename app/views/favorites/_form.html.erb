<%= form_with(model: favorite) do |form| %>
<% if favorite.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(favorite.errors.count, "error") %> prohibited this favorite from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% favorite.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :customer_id, class: label_class %>
          <%= form.text_field :customer_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
          <%= form.text_field :product_id, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if favorite.persisted? %>
<%= link_to "Cancel", favorite, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", favorites_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
