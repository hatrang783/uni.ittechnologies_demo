<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Customer</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to customers_path, class: button_class(theme: "transparent") do %>
      All Customers
      <% end %>
      <%= link_to edit_customer_path(@customer), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Username:</p>
        <p><%= @customer.username %></p>
      </li>
      <li>
        <p class="font-semibold">Password:</p>
        <p><%= @customer.password %></p>
      </li>
      <li>
        <p class="font-semibold">Points:</p>
        <p><%= @customer.points %></p>
      </li>
  </ul>
</div>
